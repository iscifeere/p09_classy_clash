{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang-16 compilar archivo activo",
            "command": "/usr/local/opt/llvm/bin/clang-16",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-I${workspaceFolder}/lib",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        },
        {
            "type": "shell",
            "label": "Build OSX",
            "command": "make build_osx",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Makefile",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}